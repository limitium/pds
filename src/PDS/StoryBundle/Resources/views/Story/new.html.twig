{% extends 'PDSStoryBundle:Story:story.html.twig' %}


{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/themes/ui-lightness/jquery-ui.css"
      type="text/css" media="all"/>
{% endblock%}
{% block javascripts %}
{{parent()}}
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.min.js"></script>
<script type="text/javascript" src="{{ asset('js/libs/jquery.form.js') }}"></script>

{% endblock%}

{% form_theme form _self %}

{% block collection_widget %}
{% spaceless %}
{% if prototype is defined %}
{% set attr = attr|merge({'data-prototype': form_story_page(prototype) }) %}
{% endif %}
<ul {{ block('widget_container_attributes') }}>
    {{ form_errors(form) }}
    {% for child in form %}
    {{ form_story_page(child) }}
    {% endfor %}
</ul>
{% endspaceless %}
{% endblock collection_widget %}


{% block header %}
Create a new story
{% endblock %}
{% block story %}

<div class="edit row">
    <div class="modal fade" id="video-upload">
        <form class="form-horizontal" action="{{ path('story_upload_video') }}" method="post" {{ form_enctype(formUpload) }}>
            <div class="modal-header">
                <a class="close" data-dismiss="modal">Ã—</a>

                <h3>Upload video to youtube.com</h3>
            </div>
            <div class="modal-body">
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="form_video">Select video</label>

                        <div class="controls">
                            {{ form_widget(formUpload.video)}}
                        </div>
                    </div>
                </fieldset>
                {{ form_rest(formUpload) }}
            </div>
            <div class="modal-footer">
                <a href="#" class="btn" data-dismiss="modal">Close</a>
                <button type="submit" class="btn btn-primary"><i class="icon-upload icon-white"></i> Upload</button>
            </div>
        </form>
    </div>
    <form action="{{ path('story_create') }}" method="post" {{ form_enctype(form) }}>
        <div class="meta span3">
            {{ form_row(form.title)}}
            {{ form_row(form.meta)}}
            {{ form_row(form.Country)}}
            {{ form_row(form.date)}}
            {{ form_row(form.Topics)}}
            <button class="btn btn-small add-video" type="button"><i class="icon-upload"></i> Add video</button>
        </div>
        <div class="span9">
            <label class="pages-label">Pages</label>
            {{ form_widget(form.Pages)}}
            <button class="btn btn-small pull-right add-page"><i class="icon-plus"></i> Page</button>
        </div>
        {{ form_rest(form) }}
        <p class="span12">
            <button class="btn btn-small create-story" type="submit"><i class="icon-pencil"></i> Create</button>
        </p>
    </form>

</div>
{% endblock %}