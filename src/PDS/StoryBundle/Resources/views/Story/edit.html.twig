{% extends 'PDSStoryBundle:Story:story.html.twig' %}
{% block header %}
Edit story
{% endblock %}
{% block story %}
<div class="edit row offset2">
<form action="{{ path('story_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('story') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('story_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
</div>
        {% endblock %}