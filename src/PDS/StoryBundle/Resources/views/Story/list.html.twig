<ul class="short-list">
    {% for story in stories %}
        <li>
            <h4>
                <a href="{{ path('story_show', { 'id': story.id }) }}">{{ story.getTitle() }}</a>
                <i class="star-rating" style="width:{{ 20 * story.getRating() }}px"></i>
            </h4>
            <h5>
                <a href="{{ path('story_location', { 'id': story.getCountry().getId() }) }}"><i class="icon-globe"></i> {{ story.getCountry() }}
                </a>
                <a href="{{ path('user_show', { 'id': story.getUser().getId() }) }}"><i class="icon-pencil"></i>{{ story.getUser() }}
                </a>
            </h5>
        </li>
    {% endfor %}
</ul>